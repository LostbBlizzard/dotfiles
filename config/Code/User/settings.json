{
  "editor.mouseWheelZoom": true,
  "git.autofetch": true,
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.formatOnSave": true
  },
  "[go]": {
    "editor.defaultFormatter": "golang.go",
    "editor.formatOnSaveMode": "file",
    "editor.insertSpaces": true
  },
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "debug.onTaskErrors": "debugAnyway",
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "workbench.editor.empty.hint": "hidden",
  "workbench.iconTheme": "vscode-icons",
  "vsicons.dontShowNewVersionMessage": true,
  "vim.vimrc.enable": true,
  "editor.lineNumbers": "relative",
  "go.inlayHints.compositeLiteralTypes": true,
  "vim.digraphs": {},
  "sqltools.connections": [],
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "vim.leader": "<space>",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "g"],
      "commands": ["lazygit.openLazygit"]
    },
    {
      "before": ["<leader>", "l"],
      "commands": ["lazydocker"]
    },
    {
      "before": ["<leader>", "s", "l"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "p", "v"],
      "commands": ["workbench.files.action.focusFilesExplorer"]
    },
    {
      "before": ["<leader>", "\""],
      "commands": ["workbench.action.splitEditor"]
    },
    {
      "before": ["<leader>", "%"],
      "commands": ["workbench.action.splitEditor"]
    },
    {
      "before": ["<leader>", "t"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["<leader>", "k"],
      "commands": ["workbench.action.nextEditor"]
    },
    {
      "before": ["<leader>", "j"],
      "commands": ["workbench.action.previousEditor"]
    },
    {
      "before": ["<leader>", "A"],
      "commands": ["workbench.action.closeOtherEditors"]
    },
    {
      "before": ["<leader>", "H"],
      "commands": ["workbench.action.closeOtherEditors"]
    },
    {
      "before": ["<leader>", "L"],
      "commands": ["workbench.action.closeOtherEditors"]
    },
    {
      "before": ["K"],
      "commands": ["editor.action.showHover"],
      "when": "editorTextFocus"
    },
    {
      "before": ["r", "n"],
      "commands": ["editor.action.rename"],
      "when": "editorTextFocus"
    },
    {
      "before": ["g", "r"],
      "commands": ["workbench.action.findReferences"],
      "when": "editorTextFocus"
    },
    {
      "before": ["s", "d"],
      "commands": ["workbench.action.problems.focus"],
      "when": "editorTextFocus"
    },
    {
      "before": ["<leader>", "c", "a"],
      "commands": ["editor.action.codeAction"]
    },
    {
      "before": ["<leader>", "d", "x"],
      "commands": ["workbench.action.debug.stop"],
      "when": "inDebugMode"
    },
    {
      "before": ["<leader>", "d", "p"],
      "commands": ["workbench.action.debug.pause"],
      "when": "inDebugMode"
    },
    {
      "before": ["<leader>", "d", "c"],
      "commands": ["editor.debug.action.runToCursor"],
      "when": "inDebugMode"
    },
    {
      "before": ["<leader>", "d", "o"],
      "commands": ["workbench.action.debug.stepInto"],
      "when": "inDebugMode"
    },
    {
      "before": ["<leader>", "d", "i"],
      "commands": ["workbench.action.debug.stepOver"],
      "when": "inDebugMode"
    },
    {
      "before": ["<leader>", "d", "h"],
      "commands": ["workbench.action.debug.stepOut"],
      "when": "inDebugMode"
    },
    {
      "before": ["<leader>", "d", "j"],
      "commands": ["editor.debug.action.toggleBreakpoint"],
      "when": "editorTextFocus"
    },
    {
      "before": ["<leader>", "d", "u"],
      "commands": ["workbench.action.debug.addConfiguration"],
      "when": "editorTextFocus"
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["editor.action.formatDocument"]
    },
    {
      "before": ["<leader>", "1"],
      "commands": ["workbench.action.openEditorAtIndex1"]
    },
    {
      "before": ["<leader>", "2"],
      "commands": ["workbench.action.openEditorAtIndex2"]
    },
    {
      "before": ["<leader>", "3"],
      "commands": ["workbench.action.openEditorAtIndex3"]
    },
    {
      "before": ["<leader>", "4"],
      "commands": ["workbench.action.openEditorAtIndex4"]
    },
    {
      "before": ["<leader>", "5"],
      "commands": ["workbench.action.openEditorAtIndex5"]
    },
    {
      "before": ["<leader>", "6"],
      "commands": ["workbench.action.openEditorAtIndex6"]
    },
    {
      "before": ["<leader>", "7"],
      "commands": ["workbench.action.openEditorAtIndex7"]
    },
    {
      "before": ["<leader>", "8"],
      "commands": ["workbench.action.openEditorAtIndex8"]
    },
    {
      "before": ["<leader>", "9"],
      "commands": ["workbench.action.openEditorAtIndex9"]
    }
  ],
  "workbench.activityBar.location": "top",
  "git.openRepositoryInParentFolders": "always",
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp"
  }
}
